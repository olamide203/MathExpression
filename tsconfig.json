{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "strict": true,
    "esModuleInterop": true,
    "exactOptionalPropertyTypes": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "ES6",
    "declarationDir": "./build/types",
    "declarationMap": true,
    "outDir": "./build",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"],
}
